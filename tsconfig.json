{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "noLib": false,
    "rootDir": "src",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
